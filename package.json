{
  "name": "poser",
  "version": "2.1.24",
  "description": "Poser â€” MAC profile manager with rotation",
  "author": "Alan",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch preload.js --watch index.html --watch renderer.js --watch utilities.js --watch macrotation.js --watch style.css --ext js,html,css --exec \"electron .\"",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "37.3.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.poser.app",
    "productName": "Poser v2.1.24",
    "asar": true,
    "directories": {
      "output": "Poser v2.1.24"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "utilities.js",
      "macrotation.js",
      "profiles.js",
      "assets/**",
      "node_modules/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true
    }
  }
}
